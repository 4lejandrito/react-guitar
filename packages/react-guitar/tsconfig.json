{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "lib": ["es2017", "dom"],
    "sourceMap": true
  },
  "files": ["src/index.tsx"],
  "include": ["@types/*.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
